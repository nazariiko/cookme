{
  "pr_template": "- [#${{NUMBER}}](${{URL}}) ${{TITLE}}",
  "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
  "transformers": [
    {
      "pattern": "- (.*) ([A-Z]{2,}-\\d+): (.*)",
      "target": "- [$2](https://smart-cooking.atlassian.net/browse/$2) ($1) $3"
    }
  ],
  "label_extractor": [
    {
      "pattern": "(.) (.+)",
      "target": "$1",
      "flags": "gu"
    },
    {
      "pattern": "\\[Issue\\]",
      "on_property": "title",
      "method": "match"
    }
  ],
  "duplicate_filter": {
    "pattern": "\\[ABC-....\\]",
    "on_property": "title",
    "method": "match"
  },
  "reference": {
    "pattern": ".*\\ \\#(.).*",
    "on_property": "body",
    "method": "replace",
    "target": "$1"
  },
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## ğŸ› Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## ğŸ§ª Tests",
      "labels": ["test"]
    },
    {
      "title": "## ğŸ“„ Documentation",
      "labels": ["documentation","doc"]
    },
    {
      "title": "## ğŸ’¬ Other",
      "labels": ["other"]
  },
  {
      "title": "## ğŸ“¦ Dependencies",
      "labels": ["dependencies"]
  }
  ]
}
